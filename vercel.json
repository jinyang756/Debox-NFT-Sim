{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "public/**",
          "templates/**",
          "data/**",
          "config/**",
          "src/**"
        ]
      }
    },
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/test",
      "dest": "/api/test.js"
    },
    {
      "src": "/api/users/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/api/trade/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/api/admin/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ]
}